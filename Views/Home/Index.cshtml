@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@model plat_kurs.Models.HomeViewModel

@{
    ViewData["Title"] = "Strona główna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
{
    <div class="container mt-4">
        <div class="bg-light p-4 rounded-3 shadow-sm mb-5 border border-primary border-opacity-25">
            <h2 class="display-6 mb-4 text-primary">
                <i class="bi bi-mortarboard-fill"></i> Twoje Kursy
            </h2>

            @if (Model.MyCourses != null && Model.MyCourses.Any())
            {
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var course in Model.MyCourses)
                    {
                        <div class="col">
                            <div class="card h-100 border-primary shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    Zakupiony
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">@course.Title</h5>
                                    <p class="card-text text-muted small">Możesz rozpocząć naukę.</p>
                                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary w-100">
                                        Przejdź do lekcji
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-3">
                    <p class="text-muted fs-5">Nie zapisałeś się jeszcze na żaden kurs.</p>
                    <p>Wybierz coś z katalogu poniżej!</p>
                </div>
            }
        </div>
    </div>
}

@if (!User.IsInRole("Admin"))
{
    <div class="container mb-5">
        <div class="d-flex align-items-center mb-4 border-bottom pb-2">
            <h2 class="display-6">Katalog Kursów</h2>
        </div>

        @foreach (var category in Model.AllCategories)
        {
            if (category.Courses != null && category.Courses.Any())
            {
                <div class="mb-5">
                    <h4 class="text-secondary mb-3"><span class="badge bg-secondary">@category.Name</span></h4>
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                        @foreach (var course in category.Courses)
                        {
                            bool isOwned = Model.MyCourses != null && Model.MyCourses.Any(c => c.Id == course.Id);

                            <div class="col">
                                <div class="card h-100 shadow-sm hover-effect border-0">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h5 class="card-title fw-bold">@course.Title</h5>
                                            <h6 class="text-success fw-bold">@course.Price PLN</h6>
                                        </div>
                                        <p class="card-text text-muted mt-2">
                                            @if (!string.IsNullOrEmpty(course.Description) && course.Description.Length > 80)
                                            {
                                                @(course.Description.Substring(0, 80) + "...")
                                            }
                                            else
                                            {
                                                @course.Description
                                            }
                                        </p>
                                    </div>
                                    <div class="card-footer bg-white border-top-0 pb-3">
                                        @if (isOwned)
                                        {
                                            <button class="btn btn-secondary w-100" disabled>Już posiadasz</button>
                                        }
                                        else if (SignInManager.IsSignedIn(User))
                                        {
                                            <form asp-controller="Home" asp-action="Enroll" method="post">
                                                <input type="hidden" name="courseId" value="@course.Id" />
                                                <button type="submit" class="btn btn-success w-100 shadow-sm">
                                                    Zapisz się teraz
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary w-100">
                                                Zaloguj się, aby kupić
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        }
    </div>
}