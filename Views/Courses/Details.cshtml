@model plat_kurs.Models.Course

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
        <div class="container-fluid py-3">
            <h1 class="display-5 fw-bold">@Model.Title</h1>
            <p class="col-md-8 fs-4">@Model.Description</p>
            <span class="badge bg-primary">@Model.Category.Name</span>
        </div>
    </div>

    <h3>Lista Lekcji</h3>
    <div class="list-group mt-3">
        @if (Model.Lessons != null && Model.Lessons.Any())
        {
            @foreach (var lesson in Model.Lessons.OrderBy(l => l.LessonNumber))
            {
                <div class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Lekcja @lesson.LessonNumber: @lesson.Title</h5>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <p class="mb-1 text-muted">@lesson.Content</p>
                    }
                    else
                    {
                        <p class="mb-1 text-danger">Treść dostępna po zalogowaniu.</p>
                    }
                </div>
            }
        }
        else
        {
            <div class="alert alert-warning">Ten kurs nie ma jeszcze lekcji.</div>
        }
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Powrót do panelu</a>
    </div>
</div>